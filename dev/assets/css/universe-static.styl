body
	background-color #000
	min-height 100%
	font-family 'Dosis', sans-serif
#wide
	height 800px
	padding-top 7%
	width 1280px
.video-bg
	position fixed
	top 0
	right 0
	width auto
	min-width 100%
	height auto
	min-height 100%
	z-index -100
	background transparent url("../videos/universe.mov")
	background-size cover
video
	display block	
.object
	transform scale(1.1)
.image
	img
		width 100%
.info-wrapper
	background url('../images/neon-sign2.png')
	background-size cover
	background-repeat round
	opacity 0
	overflow auto
	width 100%
	img
		width 100%
	p
		color #87ecf2
		line-height 1.2
	h4
		color blue
		font-size 0.7em
	i
		color deepskyblue
		opacity 0.7
		position absolute
		right 30px
		top 33px
.line
	height 1%
	transform rotate(90deg)
	width 3%
.info-card, .info-card2
	height 240px
	margin 30px 0
	overflow-y auto
	padding 5px 25px 0
.info-card2
	height 180px
	width 205px
	padding 25px 25px 0
.info-wrapper2
	display none
	height 240px
	margin-top -240px
	position absolute
	i
		color deepskyblue
		opacity 0.7
		position absolute
		right 30px
		top 33px
	.icon-close
		background url('../images/close.svg')
		color deepskyblue
		height 20px
		opacity 0.7
		position absolute
		right 21px
		top 25px
		width 20px
.name-element
	font-size 1em
.body-element
	color #66cfd6
	font-size 0.9em
.faded
	-webkit-animation: fade 5s
	animation: fade 5s
	-moz-animation: fade 5s
	-o-animation: fade 5s

@-webkit-keyframes faded
	0% 
		opacity: 0.2
	50% 
		opacity: 1
	100% 
		opacity:0

@-moz-keyframes faded
	0%
		opacity: 0.2
	50% 
		opacity: 1
	100% 
		opacity:0

@keyframes faded
	0% 
		opacity: 0.2
	50% 
		opacity: 1
	100%
		opacity: 0
	
@-o-keyframes faded
	0% 
		opacity: 0.2
	50% 
		opacity: 1
	100%
		opacity: 0.2
#vid-modal, #vid-modal2
	.modal-dialog
		width: 100%;
		height: 100%;
		margin: 0;
		padding: 0
		max-width 100%!important

	.modal-content
		background none
		height: auto;
		min-height: 100%;
		border-radius: 0;
		transform scale(1.3)
.moon-object
	left -23em
	opacity 0.8
	position absolute
	top -16em
	transform scale(0.05)
::-webkit-scrollbar
	width 2px
::-webkit-scrollbar-track
	background: #d0fafd
	margin-top 25px
::-webkit-scrollbar-thumb
	background #38a5ac
::-webkit-scrollbar-thumb:hover
	background transparent
.star
	opacity 0.8
	top -120px
	right -210px
	position absolute
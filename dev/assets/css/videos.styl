body
	background #000
	font-family 'Montserrat', sans-serif
.myVideo
	min-width 100%
	max-width 100%
.videoDetails
	min-height 60vh
	h2
		color #fff
		font-weight bold
		font-size 30px
		margin 40px 0 15px 0
	p
		color #fff
		font-weight 100
		font-size 1em
		margin 0
	button
		i
			font-size 10px
			padding 0 8px 0 0
		cursor pointer
		margin 10px 0 10px 0
		border 0
		background-color #0066ff
		color #fff
		width 100%
.wrap-shadow
	position absolute
	width 100%
	height 80%
	top 0
	left 0
	box-shadow inset 0px 0px 5em 4em #000
.card
	background-color #000
	border 0
	cursor pointer
	.card-body
		background-color #000
		color #fff
		padding 10px 0
.myModalVideo
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	width 100%
	height 100%
.modal
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	overflow hidden
.modal-dialog
	position fixed
	margin 0
	width 100%
	max-width 100%
	height 100%
	max-height 100%
	padding 0
.modal-header
	position absolute
	top 0
	right 0
	left 0
	background-color transparent
	border 0
	z-index 1
.modal-content
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	border 1px solid #000
	border-radius 0
	box-shadow none
	background-color #000
.close
	span
		color #fff
		font-size 3em
.wrap-video, .wrap-details
	padding 0 5% 0 5%
@media screen and (max-width: 992px)
	.wrap-shadow
		height 100%
@media screen and (min-width: 1200px)
	.wrap-shadow
		height 100%